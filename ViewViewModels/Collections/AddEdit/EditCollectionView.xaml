<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.Collections.AddEdit.EditCollectionView"
             Title="{Binding Title}">
    
    <FlexLayout Padding="5" Direction="Column">

        <Label Text="Madagascar Movies Title" FontAttributes="Bold" FontSize="Large"  TextColor="Black" Margin="5,5" />

        <Entry Placeholder="Enter Movie Title" FontAttributes="Bold" FontSize="Large" TextColor="Blue" HorizontalOptions="FillAndExpand"
                   Text="{Binding MovieName, Mode=TwoWay}" x:Name="MovieTitle" Margin="5,-10" />

        <Button Text="Update" Command="{Binding UpdateBtnClicked}" BackgroundColor="Green" TextColor="White"
                     HorizontalOptions="FillAndExpand" x:Name="saveBtn" Margin="0,10" />

    </FlexLayout>
    
</ContentPage>