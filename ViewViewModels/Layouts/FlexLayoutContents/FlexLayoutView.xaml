<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.Layouts.FlexLayoutContents.FlexLayoutView"
             Title="FlexLayoutView">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <FlexLayout Direction="RowReverse"
                    JustifyContent="SpaceAround"
                    AlignItems="Center"
                    BackgroundColor="White">

            <BoxView WidthRequest="35"
                 HeightRequest="35"
                 Color="Blue" />
            <BoxView WidthRequest="35"
                 HeightRequest="35"
                 Color="Green" />
            <BoxView WidthRequest="35"
                 HeightRequest="35"
                 Color="Red" />

        </FlexLayout>

        <FlexLayout Direction="RowReverse"
                    JustifyContent="SpaceAround"
                    AlignItems="Start"
                    Margin="10">
            
            <Label Text ="Blue"/>
            <Label Text ="Green"/>
            <Label Text ="Red"/>
            
        </FlexLayout>

    </VerticalStackLayout>
    
</ContentPage>