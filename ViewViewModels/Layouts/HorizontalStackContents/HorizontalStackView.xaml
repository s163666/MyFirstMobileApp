<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.Layouts.HorizontalStackContents.HorizontalStackView"
             Title="HorizontalStackView">

    <HorizontalStackLayout>
        
        <HorizontalStackLayout 
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <BoxView WidthRequest="105"
                HeightRequest="105"
                Color="Red" />

            <BoxView WidthRequest="105"
                HeightRequest="105"
                Color="Green" />

            <BoxView WidthRequest="105"
                HeightRequest="105"
                Color="Blue" />
        </HorizontalStackLayout>

        <StackLayout 
            VerticalOptions="End"
            HorizontalOptions="End">

            <BoxView WidthRequest="100"
                HeightRequest="100"
                Color="Purple" />
        </StackLayout>

    </HorizontalStackLayout>


</ContentPage>